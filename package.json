{
    "name": "create-mahdi-app",
    "version": "1.0.1",
    "description": "A CLI tool to create Next.js projects with Mahdi's preferred tech stack",
    "main": "dist/index.js",
    "bin": {
        "create-mahdi-app": "bin/cli.js"
    },
    "scripts": {
        "build": "tsc && cp -r src/templates dist/",
        "dev": "tsc --watch",
        "test": "echo \"No tests specified\" && exit 0",
        "lint": "echo \"No linter configured\" && exit 0",
        "prepublishOnly": "npm run build",
        "prepack": "npm run build"
    },
    "keywords": [
        "cli",
        "nextjs",
        "react",
        "material-ui",
        "bun",
        "scaffolding"
    ],
    "author": "Mahdi",
    "license": "MIT",
    "dependencies": {
        "prompts": "^2.4.2",
        "chalk": "^4.1.2",
        "ora": "^5.4.1",
        "fs-extra": "^11.1.1"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "@types/prompts": "^2.4.9",
        "@types/fs-extra": "^11.0.4",
        "typescript": "^5.3.0"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "files": [
        "bin/",
        "dist/",
        "src/templates/"
    ]
}
